<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".yardimAl">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yardım Al"
        android:textSize="20dp"
        android:textColor="#8b7765"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#8b8878"
        />

    <Button
        android:id="@+id/btn_cadir_ve_konteynir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çadırlar ve Barınaklar"
        android:layout_marginTop="100dp"
        android:backgroundTint="#8b8878"/>

    <Button
        android:id="@+id/btn_saglik_hizmeti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_cadir_ve_konteynir"
        android:layout_marginTop="60dp"
        android:text="Sağlık Hizmeti"
        android:backgroundTint="#8b8878"/>

    <Button
        android:id="@+id/btn_mazleme_yardimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_saglik_hizmeti"
        android:layout_marginTop="60dp"
        android:text="Malzeme Yardımı"
        android:backgroundTint="#8b8878"/>

</RelativeLayout>
